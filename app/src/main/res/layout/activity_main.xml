<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp" tools:context=".LoginActivity"
    android:id="@+id/Login">


    //Layout for Login text
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="LOGIN"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textSize="19sp"
        android:textColor="#FFFFFF"
        android:background="#13346b"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    //Layout for Sign In button
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:id="@+id/buttonLogin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:enabled="true"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:background="#13346b"
        android:onClick="onClick" />


    Layout for entering Email address
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextUsername"
        android:layout_marginBottom="63dp"
        android:editable="false"
        android:password="false"
        android:hint="username@username.com"
        android:textColor="#010711"
        android:layout_above="@+id/editTextPassword"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:paddingLeft="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    //Layout for entering Password
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:hint="password"
        android:ems="10"
        android:id="@+id/editTextPassword"
        android:layout_above="@+id/buttonLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp"
        android:password="false"
        android:textColor="#010711"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="20dp" />


    //Layout for Password text
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="PASSWORD"
        android:id="@+id/textView2"
        android:layout_above="@+id/editTextPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextPassword"
        android:layout_alignEnd="@+id/editTextPassword"
        android:textColor="#010711"
        android:paddingLeft="20dp" />


   //Layout for Username text
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="USERNAME"
        android:id="@+id/textView3"
        android:layout_above="@+id/editTextUsername"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextUsername"
        android:layout_alignEnd="@+id/editTextUsername"
        android:textColor="#010711"
        android:paddingLeft="20dp" />


    //Layout for horse image
    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/horse1"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="false"
        android:layout_marginTop="50dp" />


    //Layout for green label below Login text
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:id="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:background="#ff4bff2e" />


    //Layout for Green label above Sign In button
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:id="@+id/textView5"
        android:layout_above="@+id/buttonLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff4bff2e" />


    //Layout for forget password button
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Forgot Password"
        android:id="@+id/button1"
        android:textSize="15sp"
        android:textColor="@android:color/darker_gray"
        android:paddingRight="20dp"
        android:visibility="visible"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignBottom="@+id/editTextPassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
