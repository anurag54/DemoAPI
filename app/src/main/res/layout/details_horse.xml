<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".HorseDetails" >




    // Layout for ListView
    <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/back1">

    </ListView>



    //Layout for My Horses
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MY HORSES"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textAlignment="center"
        android:background="#13346B"
        android:visibility="visible"
        android:textColor="#FFFFFF"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="#ff4bff2e" />


    // Layout for Sort by option
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sort By"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignEnd="@+id/textView"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:dividerHeight="5dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/back" />


    //Layout for Hamburger
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="5dp"
        android:id="@+id/imageButton"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentTop="true"
        android:src="@mipmap/hamburger"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:background="#13346B"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />


    // Layout for White Horse image on toolbar
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView"
        android:background="#13346B"
        android:src="@mipmap/white_horse"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp" />


    //Layout for AtoZ (Horse name)
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView2"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/atoz"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginBottom="20dp"
        android:clickable="true" />




    // Layout for addHorse image
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/imageView4"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/addhorse"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />


    // Layout for ABC sorting text
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ABC"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_alignTop="@+id/imageView2"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginLeft="10dp" />


    // Layout for EDI sorting text
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="EDIâ„¢"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/textView4"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_alignEnd="@+id/imageButton" />


    //Layout for EDI Scores Image
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:src="@mipmap/edi"
        android:visibility="visible"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toStartOf="@+id/imageButton"
        android:layout_marginRight="20dp"
        android:foregroundGravity="center_vertical"
        android:layout_marginBottom="5dp" />


</RelativeLayout>